<launch>

    <!-- 打印时显示节点 -->
    <env name="ROSCONSOLE_FORMAT" value="[${node}]: ${message}" />
    
    <!-- 启动仿真环境 -->
    <include file="$(find racebot_gazebo)/launch/base_launch/mecanumbot.launch"/>

    <!-- 设置地图的配置文件 -->
    <arg name="map" default="room.yaml" />

    <!-- 运行地图服务器，并且加载设置的地图-->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find racebot_gazebo)/map/$(arg map)"/>

    <!-- 运行move_base节点 -->
    <include file="$(find racebot_gazebo)/launch/base_launch/teb_base_mecanum.launch"/>

    <!-- 启动AMCL节点 -->
    <include file="$(find racebot_gazebo)/launch/base_launch/amcl.launch" />

    <!-- 运行rviz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find racebot_gazebo)/rviz/nav.rviz"/>

    <!-- qr code detection -->
    <include file="$(find qr_detector)/launch/detector.launch" />
</launch>
